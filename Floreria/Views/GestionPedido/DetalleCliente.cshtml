@model Floreria.Models.ViewModels.ClienteVM
@{
    ViewData["Title"] = "DetalleCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oCliente.IdCliente == 0)
{
    <h1>Crear Cliente</h1>
}
else
{
    <h1>Crear Cliente</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form id="clienteForm" asp-action="DetalleCliente" asp-controller="GestionPedido" method="post">
            <input type="hidden" asp-for="oCliente.IdCliente" />

            <div class="mb-3">
                <label class="form-label" asp-for="oCliente.NombreCliente">Nombre o alias</label>
                <input class="form-control" asp-for="oCliente.NombreCliente" type="text" required />
                <span asp-validation-for="oCliente.NombreCliente" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oCliente.Telefono">Teléfono</label>
                <input class="form-control" asp-for="oCliente.Telefono" type="text" required />
                <span asp-validation-for="oCliente.Telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oCliente.MedioContacto">Medio de Contacto</label>
                <select class="form-select" asp-for="oCliente.MedioContacto" required>
                    <option value="">Seleccione una opción</option>
                    <option value="Facebook">Facebook</option>
                    <option value="WhatsApp">WhatsApp</option>
                    <option value="Email">Email</option>
                    <option value="Telefono">Télefono</option>
                </select>
                <span asp-validation-for="oCliente.MedioContacto" class="text-danger"></span>
            </div>

            <div class="mb-2">
                @if (Model.oCliente.IdCliente == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Registrar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Pedido" asp-controller="GestionPedido">Volver</a>
            </div>
        </form>
    </div>
</div>

